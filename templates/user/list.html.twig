{# templates/user/list.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateurs</h1>
    <a href="{{ path('user_new') }}">Ajouter un utilisateur</a>
    <ul>
        {% for user in users %}
            <li>
                <h2>{{ user.username }}</h2>
                <p>{{ user.email }}</p>
                <a href="{{ path('user_delete', {id: user.id}) }}">Supprimer</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
