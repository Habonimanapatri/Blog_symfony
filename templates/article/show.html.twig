{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ article.title }}</h1>
    <p class="text-muted"><small>Créé le {{ article.createdAt|date('Y-m-d H:i:s') }}</small></p>
    <p>{{ article.content }}</p>
    <a href="{{ path('article_list') }}" class="btn btn-secondary">Retour à la liste des articles</a>
    <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-primary">Modifier</a>
{% endblock %}
